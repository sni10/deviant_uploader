# DeviantArt API Credentials (REQUIRED)
# Obtain these by registering your application at https://www.deviantart.com/developers/
DA_CLIENT_ID=your_client_id_here
DA_CLIENT_SECRET=your_client_secret_here

# OAuth Configuration (OPTIONAL)
DA_REDIRECT_URI=http://localhost:8080/callback
DA_SCOPES='user browse stash publish'

# Database Configuration (OPTIONAL)
# DATABASE_TYPE: Database backend to use ('sqlite' or 'postgresql')
# - sqlite: Local SQLite database (default, no additional setup required)
# - postgresql: PostgreSQL database via SQLAlchemy (requires DATABASE_URL)
DATABASE_TYPE=sqlite

# DATABASE_PATH: Path to SQLite database file (used when DATABASE_TYPE=sqlite)
DATABASE_PATH=data/deviant.db

# DATABASE_URL: PostgreSQL connection string (required when DATABASE_TYPE=postgresql)
# Format: postgresql://username:password@host:port/database
# Example: postgresql://deviant_user:password@localhost:5432/deviant
# DATABASE_URL=postgresql://username:password@localhost:5432/deviant

# Upload Directories (OPTIONAL)
UPLOAD_DIR=upload
DONE_DIR=upload/done

# Logging Configuration (OPTIONAL)
LOG_DIR=logs
LOG_LEVEL=INFO
